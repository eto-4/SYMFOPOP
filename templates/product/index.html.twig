{% extends 'base.html.twig' %}

{% block title %}Llistat de Productes{% endblock %}

{% block body %}

<div class="container">

    {# Header sección #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-semibold mb-1">Productes</h1>
            <p class="text-muted small mb-0">
                {{ products|length }} productes disponibles
            </p>
        </div>
    </div>

    <div class="row g-4">

        {% for product in products %}
            <div class="col-sm-6 col-lg-4">

                <div class="product-card card">

                    {# Imagen #}
                    {% if product.image %}
                        <img src="{{ product.image }}"
                             class="card-img-top"
                             alt="{{ product.name }}">
                    {% endif %}

                    <div class="card-body d-flex flex-column">

                        {# Título #}
                        <h5 class="card-title mb-2">
                            <a href="{{ path('app_product_show', { id: product.id }) }}">
                                {{ product.name }}
                            </a>
                        </h5>

                        {# Descripción corta #}
                        <p class="text-muted small mb-3">
                            {{ product.description|slice(0, 110) ~ '...' }}
                        </p>

                        {# Autor y fecha #}
                        <div class="d-flex align-items-center gap-2 mb-3">

                            <div class="avatar-placeholder">
                                {{ product.owner.name|first|upper }}
                            </div>

                            <div class="small text-muted">
                                {{ product.owner.name }}
                                <br>
                                {{ product.createdAt|date('d/m/Y') }}
                            </div>

                        </div>

                        {# Precio + botón #}
                        <div class="mt-auto">

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="fw-bold text-primary fs-5">
                                    {{ product.price|number_format(2, ',', '.') }} €
                                </span>
                            </div>

                            <a href="{{ path('app_product_show', { id: product.id }) }}"
                               class="btn btn-outline-primary w-100">
                                Veure detall
                            </a>

                        </div>

                    </div>
                </div>

            </div>

        {% else %}

            <div class="col-12 text-center py-5">
                <p class="text-muted">No hi ha productes disponibles.</p>
            </div>

        {% endfor %}

    </div>

</div>

{% endblock %}