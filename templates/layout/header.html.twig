<!DOCTYPE html>
<html lang="ca">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
        <title>{% block pageTitle %} SymfoPop {% endblock %}</title>
    
        {# Bootstrap 5 CSS #}
        <link rel="stylesheet" 
              href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('styles/css/app.css') }}">
    </head>
    <body class="d-flex flex-column min-vh-100">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a href="{{ path('app_home') }}" class="navbar-brand">SymfoPop</a>
    
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
    
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="{{ path('app_product_index') }}" class="nav-link">Home</a>
                        </li>
    
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link">Hola, {{ app.user.userIdentifier }}</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_my_products') }}" class="nav-link">Els meus productes</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_product_new') }}" class="nav-link">Nou producte</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ logout_path() }}" class="nav-link">Logout</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a href="{{ path('app_login') }}" class="nav-link">Login</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('app_register') }}" class="nav-link">Register</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        