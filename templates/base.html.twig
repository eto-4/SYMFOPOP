<!DOCTYPE html>
<html lang="ca">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block pageTitle %} SymfoPop {% endblock %}</title>

        {# Bootstrap 5 CSS CDN #}
        <link rel="stylesheet" 
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        >
        {% block stylesheets %}  {% endblock %}
    </head>
    <body class="d-flex flex-column min-vh-100">
        
        {# NavBar #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a href="{{ path('app_home') }}" class="navbar-brand">SymfoPop</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon">
                    </span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="{{ path('app_product_index') }}" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {# Main Content #}
        <main class="container my-5 flex-grow-1">

            {# Flash Messages #}
            {% for label, message in app.flashes %}
                {% if label != 'error' %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dissmissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endfor %}

            {# Main Body Content #}
            {% block body %}
            {% endblock %}

        </main>
        
        {# Footer #}
        <footer class="bg-dark text-white text-center py-3 mt-auto">
            <small>&copy; {{ "now"|date("Y") }} - SymfoPop </small>
        </footer>

        {# Bootstrap JS Bundle #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>